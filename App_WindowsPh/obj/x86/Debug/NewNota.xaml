<Page
    x:Class="App_WindowsPh.NewNotaPhone"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App_WindowsPh"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/fondo.jpg"></ImageBrush>
        </Grid.Background>


        <TextBox x:Name="txtNota" HorizontalAlignment="Left" Margin="27,132,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="334" PlaceholderText="Titulo" Background="#777"/>
        <TextBox x:Name="txtDescripcion" HorizontalAlignment="Left" Margin="27,209,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="334" PlaceholderText="Descripcion" Background="#777" Height="389"/>
        <Button x:ConnectionId='1' x:Name="button" Content="Agregar" HorizontalAlignment="Left" Margin="27,44,0,0" VerticalAlignment="Top"                          Background="#777"/>
        <Button x:ConnectionId='2' x:Name="button1" Content="Regresar" HorizontalAlignment="Left" Margin="252,44,0,0" VerticalAlignment="Top"                        Background="#777"/>

    </Grid>
</Page>

